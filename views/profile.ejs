<!doctype html>
<html>
<!-- links to all the files main css, bootstrap etc -->
<head>
  <title>Mate Lounge</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="profile.css">
  <link rel="shortcut icon" type="image/png" href="img/favicon.png">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-blender"></span>
        Orders Available Below</h1>
        <!-- logout link -->
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <h6 id="pending">If order has been completed, click on mug to update status</h6>
        <ul class="messages">
          <% for(var i=0; i< orders.length; i++) {%> <!-- a for loop to go over the class="message" displaying the name, message, ready, thumbDown and trashcan. In addition to any other feature you want to add-->
          <li class="message">
            <span><%= orders[i].name%></span>
            <span><%= orders[i].size %></span>
            <span><%= orders[i].order %></span>
            <span><%= orders[i].status %></span>
            <span><%= orders[i].barista %></span>
            <% if(orders[i].status !== 'is ready for pick-up'){%>
            <!-- <p class="voice"><%= orders[i].name %> <%= orders[i].order%> <%= orders[i].status %> </p> -->

            <!-- <span><i class="fas fa-volume-up" aria-hidden="true"></i></span> -->
            <!-- <input type="text" value="<%= user.local.email %>" name="barista"> -->
            <span><i class="fas fa-mug-hot" aria-hidden="true"></i></span>
            <% } %>
            <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
        </ul>

        <% if (user.local.email) { %>
      </div>
      <% } %>
    </div>
    <script type="text/javascript" src="speech.js"></script>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>