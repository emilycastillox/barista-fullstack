<body>
  <div class="container">
    <section id="barista">

      <!-- <p id="loginSignUpBaristas">Baristas: </p> -->
      <h3 id="loginSignUp"> Baristas, access orders here:</h3><br>
      <button class="loginButton"> <a href="/login"> Log In </a> </button>
      <button class="signUpButton"> <a href="/signup"> Sign Up </a> </button>
    </section>
  </section>

    <div class="jumbotron text-center">

      <h1 id="title">Mate Lounge</h1><br>
      <!-- <img src="/img/mate.jpg" alt="mate"><br><br> -->
      <div class="CashierTitle">
        <h3 id="cashier">Cashiers, input order below:</h3><br>
      </div>

      <section id="bottomTwo">
        <section id="cashierSec">
        <form class="CashierTitle" action="/orders" method="POST">
          <div class="sub">
            <input type="text" placeholder="Customer Name" name="cName"><br>
            <button type="submit">Submit</button><br><br>
            </div>
            <div class="orderType">
          <!-- <input type="text" placeholder="type of smoothie" name="order"><br> -->
          <label for="espresso">Matcha Latte</label>
          <input type="radio" value="Matcha Latte" name="order"><br>
          <!-- <label for="caramel">Strawberry</label>
                <input type="radio" placeholder="Caramel Pump" name="caramel"> -->
          <label for="style">Peach Iced Tea</label>
          <input type="radio" value="Peach Iced Tea" name="order"><br>
          //
          <label for="cream">Strawberry Lemonade</label>
          <input type="radio" value="Strawberry Lemonade" name="order"><br>
          <label for="milk">Seltzer Water</label>
          <input type="radio" value="Seltzer Water" name="order">
          <br>
          <select class="Size" name="size">
            <option value="none" selected disabled  hidden></option>
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
          </select><br>
          <!-- <br> -->

        </div>
       <div class="orderType">
              <!-- <input type="text" placeholder="type of smoothie" name="order"><br> -->
              <label for="espresso">Iced White Mocha</label>
              <input type="radio" value="Iced White Mocha" name="order"><br>
              <!-- <label for="caramel">Strawberry</label>
                    <input type="radio" placeholder="Caramel Pump" name="caramel"> -->
              <label for="style">Iced Latte</label>
              <input type="radio" value="Iced Latte" name="order"><br>
              //
              <label for="cream">Iced Caramel Macchiato</label>
              <input type="radio" value="Iced Caramel Macchiato" name="order"><br>
              <label for="milk">Iced Coffee</label>
              <input type="radio" value="Iced Coffee" name="order">
              <br>
              <select class="Size" name="size">
                <option value="none" selected disabled  hidden></option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
              </select><br>
       </div>
        <div class="orderType">
          <!-- <input type="text" placeholder="type of smoothie" name="order"><br> -->
          <label for="espresso">Hot Coffee</label>
          <input type="radio" value="Hot Coffee" name="order"><br>
          <!-- <label for="caramel">Strawberry</label>
                <input type="radio" placeholder="Caramel Pump" name="caramel"> -->
          <label for="style">Hot Latte</label>
          <input type="radio" value="Hot Latte" name="order"><br>
          //
          <label for="cream">Hot Caramel Macchiato</label>
          <input type="radio" value="Hot Caramel Macchiato" name="order"><br>
          <label for="milk">Hot Mocha</label>
          <input type="radio" value="Hot Mocha" name="order">
          <br>
          <select class="Size" name="size">
            <option value="none" selected disabled  hidden></option>
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
          </select><br>
        </div>
      </section>
    </form>
    </div>

